<%= form_for @user do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Enter name' %>
    </div>

    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control', placeholder: 'Enter username' %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
    </div>

    <div class="form-group">
      <%= f.label :phone %>
      <%= f.text_field :phone, class: 'form-control', placeholder: 'Enter phone number' %>
    </div>

    <div class="form-group">
      <%= f.label :website %>
      <%= f.text_field :website, class: 'form-control', placeholder: 'Enter website URL' %>
    </div>

    <div class="form-group">
      <%= f.label :profile_photo_url %>
      <%= f.text_field :profile_photo_url, class: 'form-control', placeholder: 'Enter profile photo url URL' %>
    </div>

    <h3>Address</h3>
    <div class="form-group">
      <%= f.fields_for :address do |address_fields| %>
        <div class="form-group">
          <%= address_fields.label :street %>
          <%= address_fields.text_field :street, class: 'form-control', placeholder: 'Enter street' %>
        </div>

        <div class="form-group">
          <%= address_fields.label :suite %>
          <%= address_fields.text_field :suite, class: 'form-control', placeholder: 'Enter suite' %>
        </div>

        <div class="form-group">
          <%= address_fields.label :city %>
          <%= address_fields.text_field :city, class: 'form-control', placeholder: 'Enter city' %>
        </div>

        <div class="form-group">
          <%= address_fields.label :zipcode %>
          <%= address_fields.text_field :zipcode, class: 'form-control', placeholder: 'Enter zipcode' %>
        </div>

        <h4>Geo</h4>
        <div class="form-group">
          <%= address_fields.fields_for :geo do |geo_fields| %>
            <div class="form-group">
              <%= geo_fields.label :lat %>
              <%= geo_fields.text_field :lat, class: 'form-control', placeholder: 'Enter latitude' %>
            </div>

            <div class="form-group">
              <%= geo_fields.label :lng %>
              <%= geo_fields.text_field :lng, class: 'form-control', placeholder: 'Enter longitude' %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <h3>Company</h3>
    <div class="form-group">
      <%= f.fields_for :company do |company_fields| %>
        <div class="form-group">
          <%= company_fields.label :name %>
          <%= company_fields.text_field :name, class: 'form-control', placeholder: 'Enter company name' %>
        </div>

        <div class="form-group">
          <%= company_fields.label :catchPhrase %>
          <%= company_fields.text_field :catchPhrase, class: 'form-control', placeholder: 'Enter catch phrase' %>
        </div>

        <div class="form-group">
          <%= company_fields.label :bs %>
          <%= company_fields.text_field :bs, class: 'form-control', placeholder: 'Enter business slogan' %>
        </div>
      <% end %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>